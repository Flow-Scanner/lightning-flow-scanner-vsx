{
  "name": "lightning-flow-scanner-vsx",
  "displayName": "Lightning Flow Scanner VSX",
  "publisher": "ForceConfigControl",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Flow-Scanner/lightning-flow-scanner-vsx"
  },
  "icon": "media/lightningflow.png",
  "description": "A VS Code Extension for analysis and optimization of Salesforce Flows. Scans metadata for 20+ issues such as hardcoded IDs, unsafe contexts, inefficient SOQL/DML operations, recursion risks, and missing fault handling. Supports auto-fixes, rule configurations, and tests integration.",
  "version": "1.11.3",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Linters"
  ],
  "homepage": "https://vsx.lightningflowscanner.org",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Lightning Flow Scanner",
      "properties": {
        "flowscanner.SpecifyFiles": {
          "type": "boolean",
          "default": true,
          "description": "Specify flow file paths instead of a root directory."
        }
      }
    },
    "commands": [
      {
        "command": "flowscanner.openDocumentation",
        "title": "Flow Scanner Documentation"
      },
      {
        "command": "flowscanner.scanFlows",
        "title": "Scan Flows"
      },
      {
        "command": "flowscanner.fixFlows",
        "title": "Fix Flows"
      },
      {
        "command": "flowscanner.configRules",
        "title": "Configure Flow Scanner"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lfs-sidebar",
          "title": "Lightning Flow Scanner",
          "icon": "media/logo.svg"
        }
      ]
    },
    "views": {
      "lfs-sidebar": [
        {
          "type": "webview",
          "id": "lfs-sb",
          "name": "Lightning Flow Scanner",
          "icon": "media/logo.svg",
          "contextualTitle": "Lightning Flow Scanner"
        }
      ]
    }
  },
  "scripts": {
    "build:coverage": "webpack --env wdio=true --env coverage=true --config ./build/node-extension.webpack.config.js",
    "build:wdio": "webpack --env wdio=true --config ./build/node-extension.webpack.config.js",
    "buildup": "mkdir -p coverage/raw && npm run build:coverage",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "compile": "webpack --config ./build/node-extension.webpack.config.js",
    "coverage": "npm run buildup && NODE_ENV=test COVERAGE=true COVERAGE_PATH=./coverage/raw wdio run ./wdio.conf.mts",
    "lint": "eslint src --ext ts test --ext ts",
    "postcoverage": "nyc report -t coverage/raw --report-dir coverage/summary --reporter=lcov --reporter=text",
    "pretest": "npm run test-compile && npm run lint",
    "test-compile": "tsc -p ./",
    "vscode:prepublish": "rollup -c && npm run package",
    "wdio": "wdio run ./wdio.conf.mts > wdio.log",
    "package": "webpack --mode production --devtool hidden-source-map --config ./build/node-extension.webpack.config.js",
    "____MAIN____": "Developer Scripts",
    "build": "rollup -c && npm run build:wdio",
    "build:vsx": "npm run vscode:prepublish && vsce package --allow-package-secrets npm",
    "watch": "rimraf out dist && concurrently \"rollup -c -w\" \"webpack --watch --config ./build/node-extension.webpack.config.js\"",
    "test": "npm run wdio"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@tsconfig/svelte": "^3.0.0",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.12.7",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.92.0",
    "@types/webpack-env": "^1.18.5",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode-elements/elements": "^1.16.0",
    "@vscode-elements/webview-playground": "^1.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "3.4.0",
    "@wdio/cli": "^8.39.0",
    "@wdio/local-runner": "^8.39.0",
    "@wdio/mocha-framework": "^8.39.0",
    "@wdio/spec-reporter": "^8.39.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "coverage-istanbul-loader": "^3.0.5",
    "eslint": "^8.57.0",
    "eslint-webpack-plugin": "^4.2.0",
    "glob": "^11.0.1",
    "jest": "^29.7.0",
    "jest-mock-vscode": "^4.3.2",
    "lodash": "^4.17.21",
    "mocha": "^10.5.2",
    "npm-run-all2": "^8.0.2",
    "penv": "^0.2.0",
    "postcss": "^8.5.1",
    "postcss-load-config": "^4.0.2",
    "prettier": "^3.5.3",
    "process": "^0.11.10",
    "rimraf": "^6.1.0",
    "rollup": "^4.34.0",
    "rollup-plugin-css-only": "^4.5.2",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-svelte": "^7.2.2",
    "rollup-plugin-svelte-svg": "^1.0.0-beta.6",
    "svelte-preprocess": "^4.10.6",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.3.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "typescript": "^4.9.5",
    "wdio-vscode-service": "^6.1.0",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@flow-scanner/lightning-flow-scanner-core": "^6.4.0",
    "convert-array-to-csv": "^2.0.0",
    "cosmiconfig": "^9.0.0",
    "lightning-flow-scanner-core": "^5.9.7",
    "tabulator-tables": "^6.3.1",
    "uuid": "^11.0.5"
  },
  "keywords": [
    "salesforce",
    "flow",
    "linter",
    "static analysis",
    "security scanner",
    "flow scanner",
    "salesforce flow",
    "best practices",
    "code quality",
    "salesforce automation"
  ],
  "volta": {
    "node": "20.19.5"
  },
  "env": {
    "NODE_ENV": "wdio"
  }
}
